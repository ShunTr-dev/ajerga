---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import AyudaTramitesAjerga from '../../components/ayudaTramitesAjerga.astro'
import HeroSection from '../../components/hero-section.astro'
---

<Layout
    title="Certificado de Emigrante Retornado - AJERGA"
    description="Guía para obtener el certificado de emigrante retornado">
    <Header />

    <main>
        <HeroSection
            colorFrom="#d2557d"
            colorTo="#394d62"
            title="Oficinas integrales de asesoramiento y seguimiento al retorno"
            description="Acredita tu condición de emigrante retornado (C.E.R.)"
        />

        <section class="py-16 bg-gradient-to-b from-white to-gray-50">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <!-- Introducción -->
                    <div class="mb-12">
                        <div class="bg-blue-50 border-l-4 border-blue-500 rounded-lg p-6 mb-8">
                            <div class="flex items-start">
                                <span class="text-blue-500 text-3xl mr-4"></span>
                                <div>
                                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Información importante</h2>
                                    <p class="text-gray-700 leading-relaxed">
                                        Las <strong
                                            >Oficinas integrales de asesoramiento y seguimiento al retorno</strong
                                        > de la Xunta de Galicia te brindan orientación personalizada. El asesoramiento es
                                        <strong>obligatorio para beneficiarios BEME</strong>.
                                    </p>
                                    <div class="mt-4 flex items-center gap-2 flex-wrap">
                                        <span
                                            class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                                            Horario: 9:00 - 14:30h
                                        </span>
                                        <a
                                            href="https://emigracion.xunta.gal/es/actividade/retorna/oficinas"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-block bg-blue-600 text-white px-4 py-1 rounded-full text-sm font-semibold hover:bg-blue-700 transition-colors">
                                            Web Oficial Xunta
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Oficinas -->
                    <div class="mb-12">
                        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Oficinas en Galicia</h2>

                        <div class="grid md:grid-cols-2 gap-6">
                            <!-- Santiago de Compostela -->
                            <div
                                class="bg-white rounded-2xl shadow-xl p-6 border-t-4 border-[#d2557d] hover:shadow-2xl transition-shadow">
                                <div class="flex items-center mb-4">
                                    <div
                                        class="bg-[#d2557d] text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl mr-4">
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-800">Santiago de Compostela</h3>
                                </div>
                                <div class="space-y-3">
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div>
                                            <p class="text-gray-700 font-semibold">Praza de Mazarelos, 15</p>
                                            <p class="text-gray-600 text-sm">15703 Santiago de Compostela</p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div class="text-gray-700 text-sm">
                                            <p>
                                                <a href="tel:0034881995542">0034 881 995 542</a> | <a
                                                    href="tel:0034881995543">0034 881 995 543</a
                                                >
                                            </p>
                                            <p>
                                                <a href="tel:0034881995544">0034 881 995 544</a> | <a
                                                    href="tel:0034881995545">0034 881 995 545</a
                                                >
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <a
                                            href="mailto:oficinaretorno.emigracion.santiago@xunta.gal"
                                            class="text-[#d2557d] hover:underline text-sm break-all">
                                            oficinaretorno.emigracion.santiago@xunta.gal
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- A Coruña -->
                            <div
                                class="bg-white rounded-2xl shadow-xl p-6 border-t-4 border-[#394d62] hover:shadow-2xl transition-shadow">
                                <div class="flex items-center mb-4">
                                    <div
                                        class="bg-[#394d62] text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl mr-4">
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-800">A Coruña</h3>
                                </div>
                                <div class="space-y-3">
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div>
                                            <p class="text-gray-700 font-semibold">Gregorio Hernández 2-4, 2ª planta</p>
                                            <p class="text-gray-600 text-sm">(Espazo Amizar) - 15011 A Coruña</p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div class="text-gray-700 text-sm">
                                            <p>
                                                <a href="tel:0034981182453">0034 981 182 453</a> | <a
                                                    href="tel:0034981182491">0034 981 182 491</a
                                                >
                                            </p>
                                            <p>
                                                <a href="tel:0034981184863">0034 981 184 863</a> | <a
                                                    href="tel:0034981185943">0034 981 185 943</a
                                                >
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <a
                                            href="mailto:oficinaretorno.emigracion.coruna@xunta.gal"
                                            class="text-[#394d62] hover:underline text-sm break-all">
                                            oficinaretorno.emigracion.coruna@xunta.gal
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Lugo -->
                            <div
                                class="bg-white rounded-2xl shadow-xl p-6 border-t-4 border-[#0c615d] hover:shadow-2xl transition-shadow">
                                <div class="flex items-center mb-4">
                                    <div
                                        class="bg-[#0c615d] text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl mr-4">
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-800">Lugo</h3>
                                </div>
                                <div class="space-y-3">
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div>
                                            <p class="text-gray-700 font-semibold">Ronda da Muralla, 70, 1º Andar</p>
                                            <p class="text-gray-600 text-sm">(Edificio Administrativo) - 27297 Lugo</p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div class="text-gray-700 text-sm">
                                            <p>
                                                <a href="tel:0034982889553">0034 982 889 553</a> | <a
                                                    href="tel:0034982889552">0034 982 889 552</a
                                                >
                                            </p>
                                            <p><a href="tel:0034982889721">0034 982 889 721</a></p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <a
                                            href="mailto:oficinaretorno.emigracion.lugo@xunta.gal"
                                            class="text-[#0c615d] hover:underline text-sm break-all">
                                            oficinaretorno.emigracion.lugo@xunta.gal
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Ourense -->
                            <div
                                class="bg-white rounded-2xl shadow-xl p-6 border-t-4 border-[#c6d067] hover:shadow-2xl transition-shadow">
                                <div class="flex items-center mb-4">
                                    <div
                                        class="bg-[#c6d067] text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl mr-4">
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-800">Ourense</h3>
                                </div>
                                <div class="space-y-3">
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div>
                                            <p class="text-gray-700 font-semibold">Concello, 4, Abaixo</p>
                                            <p class="text-gray-600 text-sm">32003 Ourense</p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div class="text-gray-700 text-sm">
                                            <p>
                                                <a href="tel:0034988386114">0034 988 386 114</a> | <a
                                                    href="tel:0034988387714">0034 988 387 714</a
                                                >
                                            </p>
                                            <p><a href="tel:0034988687626">0034 988 687 626</a></p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <a
                                            href="mailto:oficinaretorno.emigracion.ourense@xunta.gal"
                                            class="text-[#c6d067] hover:underline text-sm break-all">
                                            oficinaretorno.emigracion.ourense@xunta.gal
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Vigo -->
                            <div
                                class="bg-white rounded-2xl shadow-xl p-6 border-t-4 border-[#d75528] hover:shadow-2xl transition-shadow md:col-span-2 md:max-w-xl md:mx-auto">
                                <div class="flex items-center mb-4">
                                    <div
                                        class="bg-[#d75528] text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl mr-4">
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-800">Vigo</h3>
                                </div>
                                <div class="space-y-3">
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div>
                                            <p class="text-gray-700 font-semibold">R/Concepción Arenal, 8, Baixo</p>
                                            <p class="text-gray-600 text-sm">36201 Vigo</p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <div class="text-gray-700 text-sm">
                                            <p>
                                                <a href="tel:00349886218510">0034 886 218 510</a> | <a
                                                    href="tel:00349886218511">0034 886 218 511</a
                                                >
                                            </p>
                                            <p>
                                                <a href="tel:00349886218557">0034 886 218 557</a> | <a
                                                    href="tel:00349886218338">0034 886 218 338</a
                                                >
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex items-start">
                                        <span class="text-gray-500 mr-2"></span>
                                        <a
                                            href="mailto:oficinaretorno.emigracion.vigo@xunta.gal"
                                            class="text-[#d75528] hover:underline text-sm break-all">
                                            oficinaretorno.emigracion.vigo@xunta.gal
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información adicional -->
                    <div class="mb-12">
                        <div class="bg-yellow-50 border-l-4 border-yellow-500 rounded-lg p-6">
                            <div class="flex items-start">
                                <span class="text-yellow-600 text-3xl mr-4"></span>
                                <div>
                                    <h3 class="text-xl font-bold text-gray-800 mb-2">Consejos importantes</h3>
                                    <ul class="space-y-2 text-gray-700">
                                        <li class="flex items-start">
                                            <span class="text-yellow-600 mr-2">•</span>
                                            <span
                                                >Es probable que recibas un correo informándote de tu <strong
                                                    >asesora asignada</strong
                                                > antes de llegar a Galicia</span
                                            >
                                        </li>
                                        <li class="flex items-start">
                                            <span class="text-yellow-600 mr-2">•</span>
                                            <span
                                                >Si la asesora no está en tu ciudad, <strong
                                                    >contacta a la oficina correcta</strong
                                                > y solicita el traslado</span
                                            >
                                        </li>
                                        <li class="flex items-start">
                                            <span class="text-yellow-600 mr-2">•</span>
                                            <span
                                                >En ciudades más pequeñas, las oficinas hacen <strong
                                                    >rondas itinerantes una vez al mes</strong
                                                ></span
                                            >
                                        </li>
                                        <li class="flex items-start">
                                            <span class="text-yellow-600 mr-2">•</span>
                                            <span
                                                >Desde AJERGA comunicaremos los <strong
                                                    >puntos y días de la oficina itinerante</strong
                                                ></span
                                            >
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- AJERGA -->
                    <div class="bg-gradient-to-br from-[#0c615d] to-[#094a47] rounded-2xl shadow-2xl p-8 text-white">
                        <div class="text-center mb-6">
                            <h2 class="text-3xl font-bold mb-2">Asociación AJERGA</h2>
                            <p class="text-lg text-gray-100">Jóvenes Emigrantes Retornados en Galicia</p>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6 mb-6">
                            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                <div class="flex items-center mb-2">
                                    <span class="text-2xl mr-2"></span>
                                    <h4 class="font-bold">Email</h4>
                                </div>
                                <a href="mailto:info@retornoxove.gal" class="text-[#c6d067] hover:underline break-all">
                                    info@retornoxove.gal
                                </a>
                            </div>

                            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                <div class="flex items-center mb-2">
                                    <span class="text-2xl mr-2"></span>
                                    <h4 class="font-bold">Web</h4>
                                </div>
                                <a
                                    href="https://retornoxove.gal"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-[#c6d067] hover:underline">
                                    retornoxove.gal
                                </a>
                            </div>
                        </div>

                        <div class="flex flex-wrap gap-4 justify-center">
                            <a
                                href="https://es.linkedin.com/company/jovenesemigrantes"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center bg-white text-[#0c615d] px-4 py-2 rounded-full font-semibold hover:bg-gray-100 transition-colors">
                                <span class="mr-2"></span>
                                LinkedIn
                            </a>
                            <a
                                href="https://www.facebook.com/groups/mocidade.exterior.2017"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center bg-white text-[#0c615d] px-4 py-2 rounded-full font-semibold hover:bg-gray-100 transition-colors">
                                <span class="mr-2"></span>
                                Facebook
                            </a>
                            <a
                                href="https://www.instagram.com/jovenesemigrantes/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center bg-white text-[#0c615d] px-4 py-2 rounded-full font-semibold hover:bg-gray-100 transition-colors">
                                <span class="mr-2"></span>
                                Instagram
                            </a>
                            <a
                                href="https://chat.whatsapp.com/K63dwaVZaKgElJ61e5MtGV"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center bg-[#25D366] text-white px-4 py-2 rounded-full font-semibold hover:bg-[#20BD5C] transition-colors">
                                <span class="mr-2"></span>
                                Grupo BEME 2025
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <AyudaTramitesAjerga />
    </main>
</Layout>
<Footer />
