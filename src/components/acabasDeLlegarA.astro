---
interface Props {
    city?: string
}

const { city = 'Galicia' } = Astro.props
---

<section class="bg-gradient-to-br from-gray-50 to-white py-16">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-[#77b2c0] mb-6">¿Acabas de llegar a {city}?</h2>
        <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
            Únete a AJERGA y conoce a otras personas que también han retornado a {city}
        </p>
        <a
            href="/asociate"
            class="inline-block bg-[#77b2c0] text-white px-10 py-4 rounded-full font-bold text-lg hover:bg-[#5c94a0] transition-colors shadow-lg">
            Únete a la comunidad
        </a>
    </div>
</section>
