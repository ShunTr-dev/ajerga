---
import xuntaLogo from '../assets/xunta-de-galicia.webp';
---

<footer class="bg-[#394d62] text-white mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Contacto -->
      <div>
        <h3 class="text-xl font-bold mb-4 text-[#c6d067]">Contacto</h3>
        <ul class="space-y-3">
          <li>
            <a href={`mailto:${import.meta.env.EMAIL}`} class="flex items-center gap-2 hover:text-[#c6d067] transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              {import.meta.env.EMAIL}
            </a>
          </li>
          <li>
            <a href={import.meta.env.INSTAGRAM} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 hover:text-[#d2557d] transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              @ajerga
            </a>
          </li>
        </ul>
      </div>

      <!-- Enlaces internos -->
      <div>
        <h3 class="text-xl font-bold mb-4 text-[#c6d067]">Enlaces</h3>
        <ul class="space-y-2">
          <li><a href="/equipo" class="hover:text-[#77b2c0] transition-colors">Nuestro equipo</a></li>
          <li><a href="/comite-etica" class="hover:text-[#77b2c0] transition-colors">Comité de ética y disciplina</a></li>
          <li><a href="/aviso-legal" class="hover:text-[#77b2c0] transition-colors">Aviso legal</a></li>
          <li><a href="/politica-cookies" class="hover:text-[#77b2c0] transition-colors">Política de cookies</a></li>
          <li><a href="/transparencia" class="hover:text-[#77b2c0] transition-colors">Transparencia</a></li>
        </ul>
      </div>

      <!-- Colaboradores -->
      <div>
        <h3 class="text-xl font-bold mb-4 text-[#c6d067]">Con el apoyo de</h3>
        <a href="https://www.xunta.gal" target="_blank" rel="noopener noreferrer" class="block">
          <img src={xuntaLogo.src} alt="Xunta de Galicia" class="w-48 h-auto bg-white p-2 rounded hover:opacity-90 transition-opacity" />
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-[#77b2c0] mt-8 pt-8 text-center text-sm">
      <p>&copy; {new Date().getFullYear()} AJERGA - Asociación de Jóvenes Emigrantes Retornados de Galicia. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
